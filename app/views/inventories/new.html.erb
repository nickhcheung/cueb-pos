<h4>Add an item</h4>
<%= form_for @inventory do |f| %>
  <div class="form-group">
    <%= f.label :brand_id, class: "sr-only" %>
    <%= f.collection_select :brand_id, Brand.all, :id, :name, include_blank: "Select Brand", class: "form-control", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :style, class: "sr-only" %>
    <%= f.text_field :style, class: "form-control", placeholder: "Enter Style Name", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "sr-only" %>
    <%= f.text_field :category, class: "form-control", placeholder: "Enter Category", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :color, class: "sr-only" %>
    <%= f.text_field :color, class: "form-control", placeholder: "Enter Color", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :size, class: "sr-only" %>
    <%= f.text_field :size, class: "form-control", placeholder: "Enter Size", :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "sr-only" %>
    <%= f.number_field :price, step: :any, class: "form-control", placeholder: "Enter Price", :required => true %>
  </div>
  <%= f.submit "Add", class: "btn btn-success" %>
<% end %>
