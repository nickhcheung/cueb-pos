<h1 class="title">ITEMS SOLD</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Brand</th>
    <th>Style</th>
    <th>Category</th>
    <th>Color</th>
    <th>Size</th>
    <th>Price</th>
    <th>Sale Price</th>
  </tr>
  <% @inventories.each do |item| %>
    <tr>
      <td><%= Brand.where(id: item.brand_id).first.name %></td>
      <td><%= item.style %></td>
      <td><%= item.category %></td>
      <td><%= item.color %></td>
      <td><%= item.size %></td>
      <td><%= number_to_currency(item.price) %></td>
      <td><%= number_to_currency(Sale.where(inventory_id: item.id).first.total) %></td>
    </tr>
  <% end %>
</table>
